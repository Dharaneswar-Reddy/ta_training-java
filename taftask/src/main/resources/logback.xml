<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define the appender (console, file, etc.) -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="info">
        <appender-ref ref="Console"/>
    </root>
</configuration>
